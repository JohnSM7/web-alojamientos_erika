---
import { Icon } from 'astro-icon/components';
const { slug, data } = Astro.props;
const { title, shortDescription, mainImage, location } = data;
---

<article class="group bg-white border border-gray-100 rounded-lg overflow-hidden hover:shadow-xl transition-all duration-300">
    <div class="relative overflow-hidden h-64">
        <img 
            src={mainImage} 
            alt={title} 
            class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
        />
    </div>
    <div class="p-8 bg-white">
        <div class="flex items-center text-gray-400 text-sm mb-3 space-x-1">
            <Icon name="mdi:map-marker-outline" class="h-4 w-4" />
            <span class="font-light tracking-wide">{location}</span>
        </div>
        <h3 class="text-xl font-semibold mb-3 text-gray-900">{title}</h3>
        <p class="text-gray-600 font-light leading-relaxed line-clamp-2 mb-6">
            {shortDescription}
        </p>
        <a 
            href={`/alojamientos/${slug}`} 
            class="inline-block border border-gray-900 text-gray-900 px-6 py-2 text-sm tracking-wider uppercase font-medium hover:bg-gray-900 hover:text-white transition-colors"
        >
            Ver detalles
        </a>
    </div>
</article>